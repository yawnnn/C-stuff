{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C: gcc-11 build dir",
			"command": "/usr/bin/gcc-11",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-g",
				"${fileDirname}/*",
				"-o",
				"${workspaceFolder}/build/${fileDirnameBasename}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc-11"
		}
	]
}